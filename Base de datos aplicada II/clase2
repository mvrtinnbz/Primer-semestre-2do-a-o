--APUNTES--
--CASO1--
SELECT NUMRUN_CLI ||''|| DVRUN_CLI AS "RUN CLIENTE", 
LOWER(PNOMBRE_CLI) ||' '|| INITCAP(SNOMBRE_CLI) ||' '|| UPPER(APPATERNO_CLI) ||' '|| APMATERNO_CLI AS "NOMBRE COMPLETO", FECHA_NAC_CLI AS "FECHA NACIMIENTO"
FROM CLIENTE   
WHERE '21/08'=TO_CHAR(FECHA_NAC_CLI,'dd/mm')
ORDER BY APPATERNO_CLI;



SELECT TO_CHAR(SYSDATE+1,'dd/mm') FROM DUAL;

--CASO2--
SELECT NUMRUN_EMP ||' '|| DVRUN_EMP AS "RUN EMPLEADO",
UPPER(PNOMBRE_EMP) ||' '|| UPPER(SNOMBRE_EMP) ||' '|| UPPER(APPATERNO_EMP) ||' '|| UPPER(APMATERNO_EMP) AS "NOMBRE COMPLETO EMPLEADO",
SUELDO_BASE AS "SUELDO BASE",
TRUNC(SUELDO_BASE/100000) AS "PORCENTAJE MOVILIZACIÓN",
ROUND(SUELDO_BASE*TRUNC(SUELDO_BASE/100000)/100) AS "VALOR MOVILIZACIÓN"
    

FROM EMPLEADO
ORDER BY "PORCENTAJE MOVILIZACIÓN" DESC;
